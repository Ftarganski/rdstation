{
	"version": 2,
	"builds": [
		{
			"src": "frontend/package.json",
			"use": "@vercel/static-build"
		},
		{
			"src": "api/*.js",
			"use": "@vercel/node"
		}
	],
	"routes": [
		{
			"src": "/api/products",
			"dest": "/api/products"
		},
		{
			"src": "/api/recommendations",
			"dest": "/api/recommendations"
		},
		{
			"src": "/api/(.*)",
			"dest": "/api/$1"
		},
		{
			"src": "/(.*)",
			"dest": "/frontend/$1"
		}
	]
}
