{
	"version": 2,
	"builds": [
		{
			"src": "frontend/package.json",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "frontend/build"
			}
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "/api/$1"
		},
		{
			"src": "/(.*)",
			"dest": "/frontend/build/$1"
		}
	],
	"functions": {
		"api/products.js": {
			"runtime": "nodejs18.x"
		},
		"api/recommendations.js": {
			"runtime": "nodejs18.x"
		}
	},
	"outputDirectory": "frontend/build",
	"buildCommand": "cd frontend && npm run build"
}
